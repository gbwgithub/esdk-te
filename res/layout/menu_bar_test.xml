<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/te_line_crosswise" />

    <LinearLayout
        android:id="@+id/menu_bar_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/translucent"
        android:orientation="horizontal" >

        <!-- 全屏，半屏 ，只有pad下有 -->

        <RelativeLayout
            android:id="@+id/audio_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/te_phone_menu_item"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/audio_screen_img"
                android:layout_width="match_parent"
                android:layout_height="46.666dp"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:src="#000000" />
        </RelativeLayout>

        <View
            android:id="@+id/line_audio_screen"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait"
            android:visibility="gone" />

        <!-- more -->

        <RelativeLayout
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/te_phone_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/more_img"
                android:layout_width="match_parent"
                android:layout_height="46.666dp"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:src="@drawable/te_phone_menu_more" />
        </RelativeLayout>

        <View
            android:id="@+id/line_more"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />

        <!-- MIC 1 -->

        <RelativeLayout
            android:id="@+id/video_mic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/te_phone_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/video_mic_img"
                android:layout_width="match_parent"
                android:layout_height="46.666dp"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:src="@drawable/te_phone_menu_mic" />
        </RelativeLayout>

        <View
            android:id="@+id/line_video_mic"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />

        <!-- 蓝牙，只有手机下，有 -->

        <RelativeLayout
            android:id="@+id/voice_bluetooth"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/te_pad_menu_item"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/voice_bluetooth_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:src="#000000" />
        </RelativeLayout>

		<View 
		    android:id="@+id/line_bluetooth"
		    android:layout_width="1dp"
		    android:layout_height="fill_parent"
		    android:background="@drawable/te_line_portrait"
		    />

        <!-- 扬声器 -->

        <RelativeLayout
            android:id="@+id/video_speaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/te_phone_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/video_speaker_img"
                android:layout_width="match_parent"
                android:layout_height="46.666dp"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:src="@drawable/te_phone_menu_speaker" />
        </RelativeLayout>

        <View
            android:id="@+id/line_video_speaker"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />

                <!-- 查看会场列表 -->

        <RelativeLayout
            android:id="@+id/video_conf_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" 
            android:background="@drawable/te_phone_menu_item"
            >

            <ImageView
                android:id="@+id/video_conf_list_img"
                android:layout_width="match_parent"
                android:layout_height="46.666dp"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:src="@drawable/te_phone_menu_conflist" />
        </RelativeLayout>
        
		<View 
		    android:id="@+id/line_video_conf_list"
		    android:layout_width="1dp"
		    android:layout_height="fill_parent"
		    android:layout_alignParentRight="true"
		    android:background="@drawable/te_line_portrait"
		    />
        
        <!-- 音频转视频 -->

        <RelativeLayout
            android:id="@+id/audio_switch_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/te_phone_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/audio_switch_video_img"
                android:layout_width="match_parent"
                android:layout_height="46.666dp"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:src="@drawable/te_phone_menu_switch" />
        </RelativeLayout>

        <View
            android:id="@+id/line_audio_switch_video"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />

        <!-- 共享 -->

        <RelativeLayout
            android:id="@+id/share_data"
            android:layout_width="60.33dp"
            android:layout_height="34.33dp"
            android:layout_gravity="center"
            android:background="@drawable/te_pad_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/share_data_img"
                android:layout_width="60dp"
                android:layout_height="34.67dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0.33dp"
                android:duplicateParentState="true"
                android:src="@drawable/te_state_share" />
        </RelativeLayout>

        <View
            android:id="@+id/line_share_data"
            android:layout_width="0.50dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />
        <!-- 二次拨号盘 -->

        <RelativeLayout
            android:id="@+id/redial_board"
            android:layout_width="60.33dp"
            android:layout_height="34.33dp"
            android:layout_gravity="center"
            android:background="@drawable/te_pad_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/redial_board_img"
                android:layout_width="60dp"
                android:layout_height="34.67dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0.33dp"
                android:duplicateParentState="true"
                android:src="@drawable/te_state_dial" />
        </RelativeLayout>

        <View
            android:id="@+id/line_redial_board"
            android:layout_width="0.50dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />

        <!-- 挂断 -->

        <RelativeLayout
            android:id="@+id/video_hangup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/te_phone_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/video_hangup_img"
                android:layout_width="match_parent"
                android:layout_height="46.666dp"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:src="@drawable/te_phone_menu_hangup" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 底部 -->


    <!-- 底部 -->

    <View
        android:id="@+id/line_menu_bar_bottom"
        android:layout_width="fill_parent"
        android:layout_height="0.50dp"
        android:background="@drawable/te_line_crosswise" />

    <RelativeLayout
        android:id="@+id/menu_bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@drawable/te_state_menu_bottom_left_right_normal"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/remote_number_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11.33dp"
            android:layout_marginTop="0.33dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2.50dp"
                android:text="@string/remote_number"
                android:textColor="#9c9c9c"
                android:textSize="8.67dp" />

            <TextView
                android:id="@+id/remote_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9c9c9c"
                android:textSize="8.67dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/titlemenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0.33dp"
            android:layout_marginTop="0.33dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/vedio_menu_single"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="1.33dp" />

            <TextView
                android:id="@+id/audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.50dp"
                android:gravity="center"
                android:text="@string/zero_begin_time"
                android:textColor="#9c9c9c"
                android:textSize="8.67dp"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/audio_time1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/zero_begin_time"
            android:textColor="#898989"
            android:textSize="7dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/callcoming_signal_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/vedio_menu_single1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>